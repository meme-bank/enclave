{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json",
    "builder": "swc",
    "typeCheck": true
  },
  "monorepo": true,
  "entryFile": "main",
  "exec": "node --import tsx"
}
